# ============================================
# Flask Configuration
# ============================================
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development

# ============================================
# API Key (for admin tasks)
# ============================================
API_KEY=dev-api-key-change-in-production
DISABLE_API_KEY=1  # Set 0 in production

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite:///instance/app.db

# ============================================
# ML Models
# ============================================
MODELS_DIR=models
LOOKBACK=60
HORIZON=1

# ============================================
# TensorFlow (Optional)
# ============================================
# TF_ENABLE_ONEDNN_OPTS=0  # For reproducibility

# ============================================
# Logging (Optional)
# ============================================
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
